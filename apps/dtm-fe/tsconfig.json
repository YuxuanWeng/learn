{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": ["vite/client", "node", "@testing-library/jest-dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false
  },
  "exclude": ["node_modules/**", "storybook-static", "dist", "__tests__", "*.stories.@{js|jsx|ts|tsx}"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js", ".eslintrc.js"]
}
